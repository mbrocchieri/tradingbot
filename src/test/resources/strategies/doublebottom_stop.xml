<?xml version="1.0"?>

<strategy xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:noNamespaceSchemaLocation="strategy.xsd">
    <entryRule>
        <org.ta4j.core.rules.AndRule>
            <org.ta4j.core.rules.BooleanIndicatorRule>
                <org.tradingbot.common.indicator.DoubleBottomIndicator/>
            </org.ta4j.core.rules.BooleanIndicatorRule>
            <org.ta4j.core.rules.OverIndicatorRule>
                <org.ta4j.core.indicators.EMAIndicator>
                    <org.ta4j.core.indicators.helpers.ClosePriceIndicator/>
                    <barCount>200</barCount>
                </org.ta4j.core.indicators.EMAIndicator>
                <org.ta4j.core.indicators.helpers.ClosePriceIndicator/>
            </org.ta4j.core.rules.OverIndicatorRule>
        </org.ta4j.core.rules.AndRule>
    </entryRule>
    <exitRule>
        <org.ta4j.core.rules.OrRule>
            <org.ta4j.core.rules.StopGainRule>
                <org.ta4j.core.indicators.helpers.ClosePriceIndicator/>
                <gainPercentage>10</gainPercentage>
            </org.ta4j.core.rules.StopGainRule>
            <org.ta4j.core.rules.StopLossRule>
                <org.ta4j.core.indicators.helpers.ClosePriceIndicator/>
                <lossPercentage>5</lossPercentage>
            </org.ta4j.core.rules.StopLossRule>
        </org.ta4j.core.rules.OrRule>
    </exitRule>
</strategy>
