<?xml version="1.0"?>

<strategy xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="strategy.xsd">
    <entryRule>

        <org.ta4j.core.rules.AndRule>
            <org.ta4j.core.rules.BooleanIndicatorRule>
                <org.tradingbot.common.indicator.PeakDivergenceIndicator>
                    <org.ta4j.core.indicators.helpers.ClosePriceIndicator />
                    <org.ta4j.core.indicators.RSIIndicator>
                        <org.ta4j.core.indicators.helpers.ClosePriceIndicator />
                        <barCount>14</barCount>
                    </org.ta4j.core.indicators.RSIIndicator>
                    <barCount>30</barCount>
                </org.tradingbot.common.indicator.PeakDivergenceIndicator>
            </org.ta4j.core.rules.BooleanIndicatorRule>
            <org.ta4j.core.rules.CrossedUpIndicatorRule>
                <org.ta4j.core.indicators.RSIIndicator>
                    <org.ta4j.core.indicators.helpers.ClosePriceIndicator />
                    <barCount>14</barCount>
                </org.ta4j.core.indicators.RSIIndicator>
                <org.tradingbot.common.indicator.DoubleConstantIndicator>
                    <aNum>50</aNum>
                </org.tradingbot.common.indicator.DoubleConstantIndicator>
            </org.ta4j.core.rules.CrossedUpIndicatorRule>

        </org.ta4j.core.rules.AndRule>
    </entryRule>
    <exitRule>
        <org.ta4j.core.rules.OrRule>
            <org.ta4j.core.rules.StopGainRule>
                <org.ta4j.core.indicators.helpers.ClosePriceIndicator />
                <gainPercentage>10</gainPercentage>
            </org.ta4j.core.rules.StopGainRule>
            <org.ta4j.core.rules.StopLossRule>
                <org.ta4j.core.indicators.helpers.ClosePriceIndicator />
                <lossPercentage>5</lossPercentage>
            </org.ta4j.core.rules.StopLossRule>
        </org.ta4j.core.rules.OrRule>
    </exitRule>
</strategy>
